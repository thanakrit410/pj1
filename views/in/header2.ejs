<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" />
  <link rel="stylesheet" href="/st/index.css" />
  <link rel="stylesheet" href="/st/movie.css" />

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Prompt:wght@100;300;400;500;600;700&display=swap"
    rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Koulen&display=swap" rel="stylesheet">
  <!-- aos  -->
  <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
  <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
  <script>
    AOS.init({
      duration: 1200,
    });
  </script>

  <title>test</title>
</head>

<body>
  <div class="bg">
    <div class="container">
      <header class="blog-header py-3">
        <div class="row flex-nowrap justify-content-between align-items-center">
          <div class="col-4 pt-1"></div>
          <div class="col-4 logo">
            <img src="/im/RPC-JP_Logo.png" alt="logo" width="60" height="60" />
          </div>
          <% if(!currentUser){ %>
            <div class="col-4 d-flex justify-content-end align-items-center">
              <a class="link-secondary" href="#" aria-label="Search">
              </a>
              <a class="btn btn-sm btn-outline-secondary" href="/login">Login</a>
            </div>
            <% }else{ %>
              <div class="col-4 d-flex justify-content-end align-items-center">
                <a class="link-secondary" href="#">
                  Logged as <%= currentUser.username %>
                </a>
                <a class="btn btn-sm btn-outline-secondary" href="/logout">Log out</a>
              </div>
              <% } %>
        </div>
      </header>

      <div class="nav-scroller py-1 mb-2">
        <nav class="nav d-flex justify-content-between">
          <button class="p-2 link-secondary" onclick="document.location = '/showmovie'">
            HOME
          </button>
          <button class="p-2 link-secondary" onclick="document.location = '/showmovie/movie'">
            MOVIE
          </button>
          <button class="p-2 link-secondary" onclick="document.location = '/Theater'">
            CINEMA
          </button>
          <% if(!currentUser){ %>
            <button class="p-2 link-secondary" onclick="document.location = '/login'">
              PROFILE
            </button>
            <% }else{ %>

              <button class="p-2 link-secondary" onclick="document.location = '/user/<%= currentUser._id %>'">
                PROFILE
              </button>

              <% } %>
        </nav>
      </div>
    </div>
  </div>
  <% if(error && error.length>0){ %>
    <div class="alert alert-danger" role="alert">
      <%= error %>
    </div>
    <% } %>
      <% if(success && success.length>0){ %>
        <div class="alert alert-success" role="alert">
          <%= success %>
        </div>
        <% } %>
          <div class="slide">
            <figure>
              <img src="/im/poster1.jpg" />
              <img src="/im/poster2.jpg" />
              <img src="/im/poster3.jpg" />
              <img src="/im/poster1.jpg" />
              <img src="/im/poster2.jpg" />
            </figure>
          </div>
</body>

</html>